{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageData }}
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="row">
                <input class="form-control control-stl" type="text" id="username" name="_username" placeholder="{{ "Your email" }}" value="{{ last_username }}" />
            </div>
            <div class="row">
                <input class="form-control control-stl" type="password" id="password" name="_password" placeholder="{{ "Your password" }}"/>
            </div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <div class="row">
                <button class="btn btn-default btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
{% endblock content %}