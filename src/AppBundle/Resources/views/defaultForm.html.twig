{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
        {%  if formHeader %}
            <h1 class="page-header">{{ formHeader }}</h1>
            <div class="actions">
                <button class="btn btn-primary" onclick="window.history.back()">Back</button>
            </div>
        {% endif %}
        {{ form_start(form, {'attr': {'class': formClass} }) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <button type="submit" id="admin_user_save" name="admin_user[save]" class="btn btn-success btn">Save</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock content %}