{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <h1 class="page-header">Items</h1>
    <div class="actions">
        <a href="{{ path('item_new') }}" class="btn btn-primary">Create</a>
    </div>
    <div class="search-form">
        {{ form_start(search_form, {'attr': {'class': ''} }) }}
        <div class="form-group">
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.description) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.food) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.category) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.shelf) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.created_start) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.created_end) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">{{ form_widget(search_form.created_by) }}</div>
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2 col-bottom">
                <div class="btn-group">
                    <button type="reset" value="Reset" class="btn btn-info">Reset</button>
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
            </div>
        </div>
        {{ form_end(search_form) }}
    </div>
    {% if items %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th></th>
                    <th>#</th>
                    <th>description</th>
                    <th>food</th>
                    <th>category</th>
                    <th>qty</th>
                    <th>weight</th>
                    <th>shelf</th>
                    <th>created at</th>
                    <th>updated at</th>
                    <th>created by</th>
                    <th>updated by</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>
                            <a class="ico-btn" href="{{ path('item_edit', {id: item.id}) }}">
                                <span class="glyphicon glyphicon-edit glyphicon-align-left" aria-hidden="true"></span>
                            </a>
                            {{ render(controller('AppBundle:Item:delete', {'id': item.id})) }}
                        </td>
                        <td>{{ item.id }}</td>
                        <td>{{ item.description }}</td>
                        <td>{{ item.food.name|default('undefined') }}</td>
                        <td>{{ item.category.name|default('undefined') }}</td>
                        <td>{{ item.qty }}</td>
                        <td>{{ item.weight }}</td>
                        <td>{{ item.shelf.name|default('undefined') }}</td>
                        <td>{{ item.createdAt | date('Y-m-d H:i') }}</td>
                        <td>{{ item.updatedAt | date('Y-m-d H:i') }}</td>
                        <td>{{ item.createdBy.name }}</td>
                        <td>{{ item.updatedBy.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        {% include('@App/includes/noitems.html.twig') %}
    {% endif %}
{% endblock content %}
